{
  "manifest_version": 2,

  "name": "Lantern",
  "description": "Interacts with the Lantern proxy software.",
  "version": "0.1",

  "permissions": [
    "http://127.0.0.1:16823/*",
    "notifications"
  ],

  "browser_action": {
    "default_icon": "lantern_logo.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "lantern_logo.png"
  ]
}
